<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Floor_Name_F4">
        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">68sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Floor_Layout_F4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="Floor_Main_Layout_F4">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>
    
    <style name="Floor_Line_F4">
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="Floor_Tag_F4">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="Floor_Shops_F4">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="Header_Layout_F4">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">40dp</item>
    </style>
    
    <style name="Header_Title_F4">
         <item name="android:padding">10dp</item>
         <item name="android:textColor">#ffffff</item>
         <item name="android:textSize">68sp</item>
         <item name="android:textStyle">bold</item>
    </style>

</resources>
