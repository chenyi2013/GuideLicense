<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        style="@style/Floor_Line_F4"
        android:layout_width="match_parent" />

    <LinearLayout
        style="@style/Floor_Main_Layout_F4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.puji.guidelicense.view.FoolView
            android:id="@+id/floor_name"
            style="@style/Floor_Name_F4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            style="@style/Floor_Layout_F4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tag"
                style="@style/Floor_Tag_F4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/shops"
                style="@style/Floor_Shops_F4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>